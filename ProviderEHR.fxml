<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.provider.ProviderEHRController"
            prefHeight="520" prefWidth="720">

    <VBox spacing="20" layoutX="40" layoutY="30" prefWidth="640">

        <!-- Title -->
        <Label text="Patient Electronic Health Record"
               style="-fx-font-size: 22px; -fx-font-weight: bold;" />

        <!-- Select Patient -->
        <HBox spacing="10">
            <Label text="Select Patient:" style="-fx-font-size: 14px;" />
            <ComboBox fx:id="patientCombo" prefWidth="320" />
        </HBox>

        <!-- Diagnosis -->
        <TextField fx:id="diagnosisField"
                   promptText="Diagnosis" />

        <!-- Treatment -->
        <TextField fx:id="treatmentField"
                   promptText="Treatment" />

        <!-- Notes -->
        <TextArea fx:id="notesField"
                  promptText="Clinical Notes"
                  prefHeight="120" />

        <!-- Status Label -->
        <Label fx:id="statusLabel"
               style="-fx-text-fill: red; -fx-font-size: 13px;" />

        <!-- Action Buttons -->
        <HBox spacing="15">

            <!-- Save -->
            <Button fx:id="saveBtn"
                    text="Save EHR Record"
                    prefWidth="200"
                    onAction="#saveEHR" />

            <!-- Delete (NEW) -->
            <Button fx:id="deleteEhrBtn"
                    text="Delete EHR"
                    prefWidth="200"
                    onAction="#deleteEHR"
                    disable="true"
                    style="-fx-background-color: #d9534f; -fx-text-fill: white;" />
        </HBox>

        <!-- Back -->
        <Button text="Back"
                onAction="#goBack"
                prefWidth="200" />

    </VBox>

</AnchorPane>
