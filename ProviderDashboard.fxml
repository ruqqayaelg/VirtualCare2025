<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.provider.ProviderDashboardController"
            prefWidth="650" prefHeight="450">

    <top>
        <Label text="Provider Dashboard"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-padding: 20;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15">

            <Button text="View Appointments"
                    fx:id="appointmentsBtn"
                    onAction="#goToAppointments"
                    prefWidth="250"/>

            <Button text="My Patients"
                    fx:id="patientsBtn"
                    onAction="#goToPatients"
                    prefWidth="250"/>

            <Button text="Manage Availability"
                    fx:id="availabilityBtn"
                    onAction="#goToAvailability"
                    prefWidth="250"/>

            <Button text="Electronic Health Records"
                    fx:id="ehrBtn"
                    onAction="#goToEHR"
                    prefWidth="250"/>

            <Button text="Issue Prescriptions"
                    fx:id="prescriptionsBtn"
                    onAction="#goToPrescriptions"
                    prefWidth="250"/>

            <Button text="View Feedback"
                    fx:id="feedbackBtn"
                    onAction="#goToFeedback"
                    prefWidth="250"/>

            <!-- â­ NEW BUTTON -->
            <Button text="Consultation History"
                    fx:id="historyBtn"
                    onAction="#goToHistory"
                    prefWidth="250"/>

            <Button text="Logout"
                    fx:id="logoutBtn"
                    onAction="#logout"
                    prefWidth="250"/>
        </VBox>
    </center>

</BorderPane>
