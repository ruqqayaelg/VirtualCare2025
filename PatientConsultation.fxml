<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.patient.PatientConsultationController"
            prefWidth="600" prefHeight="400">

    <top>
        <Label text="Virtual Consultation"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-padding: 20;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <Label text="(Video call functionality not implemented in this version)"
               style="-fx-font-size: 16px; -fx-text-fill: gray;"/>
    </center>

    <bottom>
        <Button text="Back"
                fx:id="backBtn"
                onAction="#goBack"
                style="-fx-padding: 10;"
                BorderPane.alignment="CENTER"/>
    </bottom>

</BorderPane>
