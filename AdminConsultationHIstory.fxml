<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.admin.AdminConsultationHistoryController"
            prefWidth="850" prefHeight="520">

    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <Label text="Provider Consultation History"
                   style="-fx-font-size: 26px; -fx-font-weight: bold;" />

            <HBox alignment="CENTER" spacing="10">
                <Label text="Select Provider:"/>
                <ComboBox fx:id="providerBox" prefWidth="250" />
                <Button text="Load History"
                        onAction="#loadHistory"
                        prefWidth="140"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="historyTable" prefWidth="820" prefHeight="380">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                <TableColumn fx:id="timeColumn" text="Time" prefWidth="120"/>
                <TableColumn fx:id="patientColumn" text="Patient" prefWidth="200"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="150"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <Button text="Back"
                onAction="#goBack"
                prefWidth="150"
                BorderPane.alignment="CENTER"
                style="-fx-padding: 10;"/>
    </bottom>

</BorderPane>
