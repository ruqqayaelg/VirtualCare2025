<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.admin.AdminRegisterProviderController"
      spacing="12"
      alignment="CENTER"
      prefWidth="400">

    <Label text="Register Provider"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Full name (matches controller) -->
    <TextField fx:id="nameField" promptText="Full Name"/>

    <TextField fx:id="emailField" promptText="Email"/>

    <PasswordField fx:id="passwordField" promptText="Password"/>

    <!-- Specialty dropdown (matches controller & enum) -->
    <ComboBox fx:id="specialtyBox" promptText="Specialty" prefWidth="200"/>

    <!-- Error / status message -->
    <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>

    <Button text="Register"
            onAction="#registerProvider"
            prefWidth="200"/>

    <Button text="Back"
            onAction="#goBack"
            prefWidth="200"/>

</VBox>
