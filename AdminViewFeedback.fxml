<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.admin.AdminViewFeedbackController"
            prefWidth="900"
            prefHeight="500">

    <top>
        <Label text="All Feedback"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </top>

    <center>
        <TableView fx:id="feedbackTable">
            <columns>
                <TableColumn fx:id="patientColumn" text="Patient"/>
                <TableColumn fx:id="providerColumn" text="Provider"/>
                <TableColumn fx:id="ratingColumn" text="Rating"/>
                <TableColumn fx:id="commentColumn" text="Comment"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER">
            <Button text="Back"
                    onAction="#goBack"
                    prefWidth="120"/>
        </HBox>
    </bottom>

</BorderPane>
