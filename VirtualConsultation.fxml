<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.consultation.VirtualConsultationController"
            prefWidth="700" prefHeight="500">

    <!-- ⭐ REMINDER BANNER -->
    <top>
        <VBox spacing="5" alignment="CENTER">
            <Label fx:id="reminderLabel"
                   text=""
                   style="-fx-font-size: 16px; -fx-text-fill: #d9534f; -fx-padding: 10;"/>
            <Label fx:id="sessionInfoLabel"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 5;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Consultation Notes:"
                   style="-fx-font-size: 18px; -fx-padding: 10;"/>

            <TextArea fx:id="notesArea"
                      prefWidth="500"
                      prefHeight="300"
                      wrapText="true"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 15;">
            <Button text="End Consultation"
                    onAction="#endConsultation"
                    prefWidth="180"/>

            <!-- ⭐ NEW BACK BUTTON -->
            <Button text="Back"
                    onAction="#goBack"
                    prefWidth="150"/>
        </HBox>
    </bottom>

</BorderPane>
