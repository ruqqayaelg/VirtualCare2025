<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.provider.ProviderConsultationHistoryController"
            prefWidth="800"
            prefHeight="500">

    <!-- ===== TOP ===== -->
    <top>
        <VBox alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Consultation History"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <!-- ===== CENTER ===== -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <TableView fx:id="appointmentsTable">
                <columns>
                    <TableColumn fx:id="patientColumn" text="Patient"/>
                    <TableColumn fx:id="dateColumn" text="Date"/>
                    <TableColumn fx:id="timeColumn" text="Time"/>
                    <TableColumn fx:id="statusColumn" text="Status"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- ===== BOTTOM ===== -->
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="Back"
                    prefWidth="120"
                    onAction="#goBack"/>
        </HBox>
    </bottom>

</BorderPane>
